<p id="notice"><%= notice %></p>

<p>
  <strong>タイトル:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>説明:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>開始日:</strong>
  <%= @task.start_date %>
</p>

<p>
  <strong>終了予定日:</strong>
  <%= @task.limit_date %>
</p>

<p>
  <strong>終了日:</strong>
  <%= @task.end_date %>
</p>

<p>
  <strong>優先度:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong>ステータス:</strong>
  <%= @task.status %>
</p>

<p>
  <% if @task.not_started? %>
    <%= link_to "開始", task_path(@task.id), method: :put %>
  <% elsif @task.processing? %>
    <%= link_to "終了", task_path(@task.id), method: :put %>
  <% else %>
    終了済み
  <% end %>
</p>

<%= link_to '編集', edit_task_path(@task) %> |
<%= link_to '戻る', tasks_path %>
