<h1>Sign Up</h1>

<%= form_for @user do |f| %>
          
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>

<br><br>
<%= f.submit "登録" %>
<% end %>
<%= link_to 'ログインはこちら', login_path %>